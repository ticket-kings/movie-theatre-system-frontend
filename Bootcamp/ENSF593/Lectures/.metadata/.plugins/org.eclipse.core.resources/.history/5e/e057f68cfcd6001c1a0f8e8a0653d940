/**
 * Class representing a certificate of deposit.
 * 
 * @author 
 *
 */
public class BankCD {

	double principle, rate, years;
	
	public BankCD(double p, double r, double y) {
		
		principle = p;
		rate = r;
		years = y;
		
	}
	
	public double calcYearly() {
		
		double yearly = (principle * (1 + rate / 365));
		return yearly;
		
	}
	
	public double calcDaily() {
		
		double daily = 1;
		return daily;
		
	}
}
