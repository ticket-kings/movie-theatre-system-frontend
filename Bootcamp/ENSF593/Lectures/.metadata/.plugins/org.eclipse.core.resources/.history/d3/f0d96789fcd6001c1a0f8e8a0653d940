
/**
 * 
 * TODO: add JavaDoc
 * 
 * @author 
 *
 */
public final class Days {
	
	/**
	 * Days cannot be instantiated, has static methods only.
	 */
	private Days() {}
	
	public static int howManyDays(int i) {
		
		int month = i;
	
		if (month == 2) {
			return 28;
		}
		else if (month < 8) {
			if (month % 2 == 0) {
				return 30;
			}
			else
				return 31;
		}
		else {
			if (month % 2 == 0) {
				return 31;
			}
			else 
				return 30;
		}
	}

}
